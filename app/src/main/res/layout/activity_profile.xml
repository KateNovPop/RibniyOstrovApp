<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RootElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondBgColor"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/ConfidentialityButton"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyProfileButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/jejumyeongjo_regular"
                android:text="           Политика конфеденциальности"
                android:textColor="#455179"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="0"
                android:minWidth="30dp"
                app:srcCompat="@drawable/ic_vector_1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/back2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_p" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_regular"
        android:text="Профиль"
        android:textColor=" #455179"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/back2Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back2Button" />

    <ImageButton
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_button_rectangle" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jejumyeongjo_regular"
        android:text="Выйти"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/signOutButton"
        app:layout_constraintEnd_toEndOf="@+id/signOutButton"
        app:layout_constraintStart_toStartOf="@+id/signOutButton"
        app:layout_constraintTop_toTopOf="@+id/signOutButton" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jejumyeongjo_regular"
        android:text="Информация"
        android:textColor="#455179"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <androidx.cardview.widget.CardView
        android:id="@+id/historyProfileButton"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginTop="168dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/jejumyeongjo_regular"
                android:text="История заказов"
                android:textColor="#455179"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="0"
                android:minWidth="30dp"
                app:srcCompat="@drawable/ic_vector_1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="342dp"
        android:layout_height="133dp"
        android:layout_marginTop="17dp"
        app:cardBackgroundColor="#BCE4E5"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_profile_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="sans-serif"
                    android:text="Екатерина Новоженина"
                    android:textColor="#455179"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/ProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="6dp"
                    android:alpha="0.5"
                    android:text="TextView"
                    android:textSize="13dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="18dp"
                    android:alpha="0.3"
                    app:cardBackgroundColor="@color/black" />

                <TextView
                    android:id="@+id/ProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="6dp"
                    android:alpha="0.5"
                    android:text="TextView"
                    android:textSize="13dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="18dp"
                    android:alpha="0.3"
                    app:cardBackgroundColor="@color/black" />

                <TextView
                    android:id="@+id/ProfileAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="6dp"
                    android:alpha="0.5"
                    android:text="TextView"
                    android:textSize="13dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="18dp"
                    android:alpha="0.3"
                    app:cardBackgroundColor="@color/black" />

            </LinearLayout>

            <ImageView
                android:id="@+id/EditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="19dp"
                app:srcCompat="@drawable/ic_pencil" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Способ доставки"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfidentialityButton" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="315dp"
        android:layout_height="205dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FA4A0C"
                android:checked="true"
                android:fontFamily="@font/poppins"
                android:text="Карта"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:alpha="0.3"
                app:cardBackgroundColor="@color/black">

            </androidx.cardview.widget.CardView>

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FA4A0C"
                android:fontFamily="@font/poppins"
                android:text="Наличные"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:alpha="0.3"
                app:cardBackgroundColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FA4A0C"
                android:fontFamily="@font/poppins"
                android:text="МирPay"
                android:textColor="@color/black"
                android:textSize="17dp" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>